# Example environment file for Manga Lakehouse
# Copy to .env and adjust values as needed
# cp env.example .env

# Snowflake
SNOWFLAKE_ACCOUNT=
SNOWFLAKE_USER=
SNOWFLAKE_PASSWORD=
SNOWFLAKE_WAREHOUSE=COMPUTE_WH
SNOWFLAKE_DATABASE=MANGALKE_DB
SNOWFLAKE_SCHEMA=MANGA_SCHEMA

# Postgres (Airflow metadata + Superset)
POSTGRES_USER=airflow
POSTGRES_PASSWORD=airflow
POSTGRES_DB=airflow
SUPERSET_DB=superset

# MinIO (S3-compatible)
MINIO_ENDPOINT_URL=http://minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=manga-data

# API base
# Set to Manga Hook API or leave empty to rely on fallback
MANGA_API_BASE=https://api.mangahook.xyz/manga
# Public fallback keeps the stack runnable
MANGA_API_FALLBACK=https://api.mangadex.org/manga
REQUEST_TIMEOUT=30
REQUEST_RETRIES=2